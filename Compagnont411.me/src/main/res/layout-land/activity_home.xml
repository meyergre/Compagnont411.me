<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/not_a_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:id="@+id/not_the_left_drawer"
        android:layout_gravity="start"
        android:scrollbars="none"
        android:background="#eee"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/imageView12"
                    android:src="@drawable/bg_drawer"
                    android:scaleType="centerCrop"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="username"
                        android:id="@+id/drawer_username"
                        android:textColor="#ccFFFFFF"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="class"
                        android:id="@+id/drawer_class"
                        android:textColor="#77FFFFFF"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/drawer_username"
                        android:layout_alignStart="@+id/drawer_username" />
                </LinearLayout>

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/t411_action_lightgrey"
                android:clickable="false"
                android:layout_weight="0" />

            <LinearLayout
                android:id="@+id/btnMails"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/androidt411_btn"
                android:focusable="true"
                android:minWidth="280dp"
                android:layout_gravity="center"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_readmail"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/button_mail"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/t411_action_blue"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/hMails"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="9dip"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#555"
                    android:textSize="14dp"
                    android:gravity="center|center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnTop100"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/androidt411_btn"
                android:focusable="true"
                android:visibility="visible"
                android:minWidth="280dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_top100"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/top_100"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/t411_action_blue"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnBookmarks"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/androidt411_btn"
                android:focusable="true"
                android:visibility="visible"
                android:minWidth="280dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_menu_dllater"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/bookmarks"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/t411_action_blue"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnFriends"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/androidt411_btn"
                android:focusable="true"
                android:layout_gravity="center"
                android:minWidth="280dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_friends"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/my_friends"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/t411_action_blue"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnUploads"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/androidt411_btn"
                android:focusable="true"
                android:layout_gravity="center"
                android:minWidth="280dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/imageView112"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_uploads"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView72"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/my_uploads"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/t411_action_blue"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnStats"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/androidt411_btn"
                android:focusable="true"
                android:layout_gravity="center"
                android:minWidth="280dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/ImageView05"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_stats"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/statistics"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/t411_action_blue"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCalculator"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/androidt411_btn"
                android:focusable="true"
                android:layout_gravity="center"
                android:minWidth="280dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/btn_mailUpdate"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_calculator"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/calculator"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/t411_action_blue"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_news"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/androidt411_btn"
                android:focusable="true"
                android:layout_gravity="center"
                android:minWidth="280dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_news"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/btn_news"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/t411_action_blue"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnForum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/androidt411_btn"
                android:focusable="true"
                android:layout_gravity="center"
                android:minWidth="280dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_thread"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/btn_forum"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/t411_action_blue"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/t411_action_lightgrey"
                android:clickable="false"
                android:layout_weight="0"></FrameLayout>

            <LinearLayout
                android:id="@+id/btnService"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/androidt411_btn"
                android:focusable="true"
                android:layout_gravity="center"
                android:minWidth="280dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_useraccount"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/button_service"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/t411_action_grey"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/androidt411_btn"
                android:focusable="true"
                android:layout_gravity="center"
                android:minWidth="280dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_about"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/about"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/t411_action_grey"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_report"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/androidt411_btn"
                android:focusable="true"
                android:layout_gravity="center"
                android:minWidth="280dp"
                android:visibility="invisible"
                android:layout_weight="0" >

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_about"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/create_report"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/t411_action_grey"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="#dd0000"
                android:focusable="true"
                android:minWidth="280dp"
                android:onClick="onDisconnectPressed"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_disconnect"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_vertical"
                    android:text="@string/button_disconnect"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFF"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/content_frame"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:background="#eee"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/linearLayout2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_upload" />

                <TextView
                    android:id="@+id/upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="upload"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#888" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_download" />

                <TextView
                    android:id="@+id/download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="download"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#888" />

            </LinearLayout>

            <TextView
                android:id="@+id/hRatio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="Ratio"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#888"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/homeSmiley"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/smiley_unknown"
                android:layout_margin="3dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/torrent_card"
            android:id="@+id/frameLayout2"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_above="@+id/linearLayout2">

            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/homeWebview"
                android:layout_gravity="center"
                android:scrollbars="none"
                android:visibility="visible"
                android:layout_toRightOf="@+id/close_menu_area"
                android:layout_above="@+id/linearLayout2"
                android:layout_below="@+id/linearLayout3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:orientation="vertical"
                android:background="@drawable/torrent_card"
                android:id="@+id/linearLayout3"
                android:layout_below="@+id/statBtm"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/hAvatar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/avatar_default" />

                    <LinearLayout
                        android:id="@+id/hWidget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:minWidth="250dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/hLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Username"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/t411_blue"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/wClasse"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=" (Class...)"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#AA000000"
                                android:textSize="12dp"
                                android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/up24" />

                            <TextView
                                android:id="@+id/hUP24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dip"
                                android:layout_marginRight="2dip"
                                android:text="..."
                                android:textColor="#0059ad"
                                android:textSize="13sp" />

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"></FrameLayout>

                            <TextView
                                android:id="@+id/hDL24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dip"
                                android:layout_marginRight="2dip"
                                android:text="..."
                                android:textColor="#0059ad"
                                android:textSize="13sp" />

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/dl24" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/hGoLeft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00 GB"
                                android:textColor="#888"
                                android:textSize="10sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/hGoLeftLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:ellipsize="end"
                                android:lines="1"
                                android:maxLines="1"
                                android:text="@string/DownloadLeft"
                                android:textColor="#888"
                                android:textSize="10sp"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/hUpLeft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00 GB"
                                android:textColor="#888"
                                android:textSize="10sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/TextView07"
