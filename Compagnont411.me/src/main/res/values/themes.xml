<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Translucent theme -->
        <style name="Theme.Transparent" parent="@style/Theme.AppCompat.Light.NoActionBar">
            <item name="android:windowIsTranslucent">true</item>
            <item name="android:windowBackground">@android:color/transparent</item>
            <item name="android:windowContentOverlay">@null</item>
            <item name="android:windowNoTitle">true</item>
            <item name="android:backgroundDimEnabled">false</item>
        </style>

    <!-- the theme applied to the application or activity -->

    <style name="toolbarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="android:statusBarColor">@color/t411_action_blue_darker</item>
        <item name="android:navigationBarColor">@color/t411_action_blue</item>
        <item name="colorPrimary">@color/t411_action_blue</item>
        <item name="colorPrimaryDark">@color/t411_action_blue_darker</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorAccent">#2885ba</item>
    </style>

    <style name="toolbarLoginTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="android:statusBarColor">@color/t411_black</item>
        <item name="android:navigationBarColor">@color/t411_black</item>
        <item name="colorPrimary">@color/t411_action_blue</item>
        <item name="colorPrimaryDark">@color/t411_action_blue_darker</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorAccent">#2885ba</item>
    </style>


    <!-- Start of Light Lollipop theme -->

    <style name="CustomActionBarLightTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:background">#fbfbfb</item>
        <item name="android:actionBarStyle">@style/MyLightActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyLightActionBar</item>
    </style>

    <style name="MyLightActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:textAllCaps">true</item>
        <item name="android:icon">@drawable/ic_empty</item>
        <item name="android:titleTextStyle">@style/MyLightActionBarTitleText</item>
        <item name="android:subtitleTextStyle">@style/MyLightActionBarSubTitleText</item>

        <!-- Support library compatibility -->
        <item name="background">@android:color/transparent</item>
        <item name="titleTextStyle">@style/MyLightActionBarTitleText</item>
        <item name="textAllCaps">true</item>
        <item name="icon">@drawable/ic_empty</item>

    </style>

    <!-- ActionBar title text -->
    <style name="MyLightActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#555</item>
        <!-- The textColor property is backward compatible with the Support Library -->
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyLightActionBarSubTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#44000000</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
    <!-- End of Light KitKat theme -->

    <style name="MyDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:background">#fbfbfb</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorAccent">#2885ba</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">

        <item name="android:background">@color/t411_action_blue_darker</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:subtitleTextStyle">@style/MyActionBarSubTitleText</item>


        <!-- Support library compatibility -->
        <item name="background">@color/t411_action_blue_darker</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>

    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFF</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="MyActionBarSubTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">#77FFFFFF</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>



    <style name="AdTitleDialog" parent="@style/android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>


    <color name="t411_action_blue">#002244</color>
    <color name="t411_action_blue_darker">#001133</color>
    <color name="t411_action_grey">#555</color>
    <color name="t411_action_lightgrey">#AAA</color>
</resources>
