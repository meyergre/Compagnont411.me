<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:background="#FFF">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adview"
        ads:adSize="FLUID"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_date"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#000"
            android:paddingLeft="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            style="@style/Widget.AppCompat.Button"
            android:padding="0dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▲"
                android:id="@+id/order_date_asc"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_weight="1"
                android:onClick="onSort" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▼"
                android:id="@+id/order_date_desc"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_weight="1"
                android:onClick="onSort" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_size"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#000"
            android:paddingLeft="10dp" />

        <LinearLayout
            style="@style/Widget.AppCompat.Button"
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:padding="0dp">

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▲"
                android:id="@+id/order_size_asc"
                android:layout_weight="1"
                android:onClick="onSort" />

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▼"
                android:id="@+id/order_size_desc"
                android:layout_weight="1"
                android:onClick="onSort" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_seed"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#000"
            android:paddingLeft="10dp" />

        <LinearLayout
            style="@style/Widget.AppCompat.Button"
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:padding="0dp">

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▲"
                android:id="@+id/order_seeders_asc"
                android:layout_weight="1"
                android:onClick="onSort" />

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▼"
                android:id="@+id/order_seeders_desc"
                android:layout_weight="1"
                android:onClick="onSort" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_leech"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#000"
            android:paddingLeft="10dp" />

        <LinearLayout
            style="@style/Widget.AppCompat.Button"
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:padding="0dp">

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▲"
                android:id="@+id/order_leechers_asc"
                android:layout_weight="1"
                android:onClick="onSort" />

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▼"
                android:id="@+id/order_leechers_desc"
                android:layout_weight="1"
                android:onClick="onSort" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>