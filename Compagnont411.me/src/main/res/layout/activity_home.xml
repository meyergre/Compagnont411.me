            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/t411_action_lightgrey"
                android:layout_margin="2dp"
                android:clickable="false"></FrameLayout>

            <LinearLayout
                android:id="@+id/btnService"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/androidt411_btn"
                android:focusable="true"
                android:layout_gravity="center"
                android:minWidth="280dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_useraccount"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/button_service"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/t411_action_grey"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#15000000"
                android:layout_margin="2dp"
                android:clickable="false"
                android:id="@+id/frameLayout" />

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/androidt411_btn"
                android:focusable="true"
                android:layout_gravity="center"
                android:minWidth="280dp">

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_about"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/about"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/t411_action_grey"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.DrawerLayout>
