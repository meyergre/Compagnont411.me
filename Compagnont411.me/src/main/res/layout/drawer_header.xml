<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:id="@+id/imageView18"
        android:src="@drawable/material_background"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:id="@+id/drw_username"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="44dp"
        android:textColor="#FFF"
        android:layout_above="@+id/drw_class"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connectez-vous"
        android:id="@+id/drw_class"
        android:textColor="#66FFFFFF"
        android:layout_alignBottom="@+id/imageView18"
        android:layout_alignLeft="@+id/drw_username"
        android:layout_alignStart="@+id/drw_username"
        android:layout_marginBottom="19dp"
        android:textSize="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/button6"
        android:onClick="onLogout"
        android:layout_alignBottom="@+id/imageView18"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="19dp"
        android:textColor="#FFF"
        android:backgroundTint="#ED0000" />
</RelativeLayout>